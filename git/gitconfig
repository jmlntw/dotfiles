# ~/.gitconfig

[alias]
  # Shortcuts
  aa = add --all
  ap = add --patch
  br = branch
  ci = commit
  cm = commit --message
  co = checkout
  cb = checkout -b
  cp = cherry-pick
  dc = diff --cached
  ds = diff --stat
  lg = log --graph
  lo = log --oneline
  rc = rebase --continue
  rs = rebase --skip
  st = status
  ss = status --short

  # Log
  graph = log --graph --all --decorate --oneline

  # Lookup
  authors = !git log --pretty=format:'%an <%ae>' | sort -u
  whorank = shortlog --numbered --summary --email --no-merges
  count = rev-list --all --count
  size = count-objects --verbose --human-readable

  # Sync
  sync = !git pull --rebase && git submodule update --init --recursive

  # Publish
  branch-name = rev-parse --abbrev-ref HEAD
  publish = !git push --set-upstream origin "$(git branch-name)"
  unpublish = !git push origin :"$(git branch-name)"

  # Snapshot
  snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
  snapshots = stash list --grep snapshot

  # Reset
  discard = checkout --
  unstage = reset HEAD
  uncommit = reset --soft HEAD^

  # Assume
  assume = update-index --assume-unchanged
  unassume = update-index --no-assume-unchanged
  assumed = !git ls-files -v | grep ^h | cut -c 3-

  # Clean
  trim = !git remote prune origin && git gc
  cleanup = !git clean -df && git stash clear

  # Fetch and checkout a GitHub pull request from a remote (defaults to `origin`)
  # Usage: `git gh-pr 123` or `git gh-pr 123 upstream`
  gh-pr = "!f(){ git fetch -fu ${2:-origin} refs/pull/$1/head:gh-pr/$1 && git checkout gh-pr/$1; };f"

  # Fetch and checkout a GitLab merge request from a remote (defaults to `origin`)
  # Usage: `git gl-mr 123` or `git gl-mr 123 upstream`
  gl-mr = "!f(){ git fetch -fu ${2:-origin} merge-requests/$1/head:gl-mr/$1 && git checkout gl-mr/$1; };f"

[core]
  autocrlf = input
  excludesFile = ~/.gitignore
  attributesFile = ~/.gitattributes

[diff]
  algorithm = histogram

[fetch]
  prune = true

[merge]
  ff = false

[pull]
  rebase = preserve
  # rebase = merges

[rebase]
  autoSquash = true

[url "git@github.com:"]
  pushInsteadOf = git://github.com/
  pushInsteadOf = https://github.com/

[url "git@gist.github.com:"]
  pushInsteadOf = git://gist.github.com/
  pushInsteadOf = https://gist.github.com/

[url "git@gitlab.com:"]
  pushInsteadOf = git://gitlab.com/
  pushInsteadOf = https://gitlab.com/

[user]
  useConfigOnly = true

[include]
  path = ~/.gitconfig.local
