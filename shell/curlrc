# ~/.curlrc

# Set the maximum time in seconds that the connection to the server is allowed
# to take.
connect-timeout = 30

# Redo the request on the new place if the server reports that the requested
# page has moved to a different location.
location

# Set the previous URL as referer when following a redirect.
referer = ";auto"

# Show an error message if curl fails.
show-error
